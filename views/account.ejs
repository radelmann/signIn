<!-- views/profile.ejs -->
<!doctype html>
<html>
  <head>
    <title>signIn</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
    body        { padding-top:80px; word-wrap:break-word; }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="page-header text-center">
        <h1><span class="fa fa-gear"></span> User Account Page</h1>
      </div>
      <div class="row">
        
        <div class="col-sm-12">
          <div class="well">
            <% if (user.type === 'local') { %>
            <h3 class="text-warning"><span class="fa fa-user"></span> Local</h3>
            <% } %>
            <% if (user.type === 'facebook') { %>
            <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>
            <% } %>
            <% if (user.type === 'twitter') { %>
            <h3 class="text-info"><span class="fa fa-twitter"></span> Twitter</h3>
            <% } %>
            <p>
              <strong>id</strong>: <%= user._id %><br>
              <strong>name</strong>: <%= user.name %><br>
              
              <% if (user.email !== '') { %>
              <strong>email</strong>: <%= user.email %><br>
              <% } %>
            </p>
          </div>
          <a href="/logout" class="btn btn-primary pull-right">Logout</a>
        </div>
      </div>
    </div>
  </body>
</html>